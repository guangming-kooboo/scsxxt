@model ServicePlatform.Areas.App.ViewModel.Home.EditDetailEvaluateEnterprise＿Ｍ
<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <title>评价学校</title>

    <link href="~/Areas/App/Content/CSS/css.css" rel="stylesheet" />
</head>
<body>

    <form method="POST">
        <div class="appraisal-head">
            <div class="left">
                <a href="@Url.Action("Main", "Home", new {area = "App", uid = Model.uid})"><</a>
            </div>

            <div class="middle">
                <p>评价企业</p>
            </div>

            <div class="right">
                <input class="done" type="submit" value="确定" />
                @*<a href="">提交</a>*@
            </div>
        </div>

        <div class="school-evaluation">
            <p><span>▶</span>&nbsp;@Model.EntName</p>
            <div>
                @for (int i = 0; i < Model.EvaluateEnt.Count; i++)
                     {
                         var dropDownId = "DropDown-" + Model.EvaluateEnt[i].ItemNo;
                         var contentId = "Content-" + Model.EvaluateEnt[i].ItemNo;
                         <input type="hidden" value="@Model.EvaluateEnt[i].ItemNo" name="ItemNo">
                         <ul>
                             <li class="title">@Model.EvaluateEnt[i].ItemName</li>
                             @*<li class="chose">*@
                             @Html.DropDownList(dropDownId, Model._StuEvaEntGradeLevelItem, new {id = dropDownId, name = "dropDownId", @class = "chose"})
                             @*</li>*@
                             <li class="tt">@Html.TextArea(contentId, new {id = contentId, name = "contentId", @class = "tt"}) </li>
                         </ul>
                         <script type="text/javascript">
                             $("#@dropDownId").val('@Model.EvaluateEnt[i].ItemGradeNo');
                             $("#@contentId").val('@Model.EvaluateEnt[i].ItemContent');
                         </script>
                     }
            </div>
        </div>
        </form>
</body>


