@model ServicePlatform.Areas.App.ViewModel.Home.EvaluateSchool_M

<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <title>评价学校</title>

    <link href="~/Areas/App/Content/CSS/css.css" rel="stylesheet" />
</head>
<body>

    <form method="POST">
        <div class="appraisal-head">
            <div class="left">
                <a href="@Url.Action("Main", "Home", new {area = "App", uid = Model.uid})"><</a>
            </div>

            <div class="middle">
                <p>评价学校</p>
            </div>


            <div class="right">
                <input class="done" type="submit" value="确定"/>
                @*<a href="">提交</a>*@
            </div>

        </div>

        <div class="school-evaluation">
            <p><span>▶</span>&nbsp;华侨大学</p>
            <div>
                @foreach (var item in Model.EvaluateSchoolItem)
            {
                    <input type="hidden" value="@item.ItemNo" name="ItemNo">
                    <ul>
                        <li class="title">@item.ItemName</li>
                        @Html.DropDownListFor(o => o.ItemGrade, Model._StuEvaSchoolGradeLevelItem, new { @class = "chose" })
                        @Html.TextAreaFor(o => o.ItemContent, new { @class = "tt" })
                    </ul>
                  
                }
            </div>
        </div>

    </form>
</body>