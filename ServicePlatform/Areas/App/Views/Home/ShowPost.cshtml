@model ServicePlatform.Areas.App.ViewModel.Home.ShowPost_M

<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    @*<meta name="viewport" content="width=device-width, initial-scale=1">*@
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <title>岗位</title>
    <link href="~/Areas/App/Content/CSS/css.css" rel="stylesheet" />

</head>
<body>
    <div class="main-do">

        <div class="company-head">
            <div class="left">
                <a href="@Url.Action("EnterpriseIndex", "Home", new { area = "App", Ent_No = Model.Ent_No,uid=Model.Uid})">&nbsp;<span><</span>&nbsp;返回</a>
            </div>
            <div class="middle">
                <p>岗位详情</p>
            </div>
            <div class="right">
                <p></p>
            </div>
        </div>
            <div class="post-div">
                @foreach (var job in Model.Jobs)
                {
                    <p class="classify-p">@job.PositionName</p>
                    @Html.Hidden(job.PositionID)
                    <ul class="note-ul">
                        <li class="classify-li"><p class="classify-li-p">招聘人数</p></li>
                        <li class="classify-li"><p class="classify-li-p2">@job.PosQuantity 人</p></li>
                        <li class="classify-li"><p class="classify-li-p">剩余空位</p></li>
                        <li class="classify-li"><p class="classify-li-p2">@job.RemainRecruitingCount 人</p></li>
                    </ul>

                    <ul class="note-ul">
                        <li class="classify-li"><p class="classify-li-p">岗位描述</p></li>
                        <li class="classify-lis"><p class="classify-li-p2">@job.Discription</p></li>                   
                    </ul>                   
                        <ul class="note-ul">
                            <li class="classify-li"><p class="classify-li-p">截止日期</p></li>
                            <li class="classify-lis">
                                <p class="classify-li-p2"> @job.PosExpireDate.ToString("yyyy-M-d dddd")</p>                     
                            </li>
                        </ul>
                        <hr class="classify-hr">
                }         
    </div>
</body>
