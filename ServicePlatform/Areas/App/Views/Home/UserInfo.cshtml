<script src="~/Include/timePicker/jquery/jquery-1.8.3.min.js"></script>
<script src="~/Include/timePicker/bootstrap/js/bootstrap.js"></script>
<script src="~/Include/timePicker/jquery/bootstrap-datetimepicker.js"></script>
<script src="~/Include/timePicker/jquery/locales/bootstrap-datetimepicker.zh-CN.js"></script>

<script type="text/javascript">

    $('.form_datetime').datetimepicker({
        language:  'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: true,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1,
        format: "yyyy-MM-dd hh:ii"
    });

</script>

