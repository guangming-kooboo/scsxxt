@model ServicePlatform.Areas.AppStudent.ViewModel.Home.CompleteInfo_M
<style>
    .placeholder {
        margin: 5px;
        padding: 0 10px;
        text-align: center;
    }

    .abc {
        width: 125px;
        height: 125px;
        border-radius: 62.5px;
    }
</style>

    <div class="weui-navbar">
        <div class="colortitle weui-navbar__item">
            <div class="weui-flex ">
                <div>
                    <a href="javascript:submit('b');" >@*返回登录*@
                        <div class="placeholder ">
                            <img src="@ViewData["root"]images/return.png"   class="return">
                        </div>
                    </a>
                </div>
                <div class="weui-flex__item "><div class="placeholder">完善信息</div></div>
                <a href="javascript:submit('a');">
                    <div class="placeholder" style="color: #fff">保存</div>
                </a>
            </div>
        </div>
    </div>
<div class="weui-tab__bd">
    <div class="weui-tab__bd-item weui-tab__bd-item--active">
        <div class="pubilice-uppad"></div>
        <div class="weui-flex">
            <div class="weui-flex__item">
                @if (!string.IsNullOrEmpty(Model.StuPhoto))
                {
                    <div class="placeholder ">
                        <img class="abc" src="@Model.StuPhoto">
                    </div>
                }
                else
                {
                    <div class="placeholder">
                        <img class="abc" src="@ViewData["root"]images/大白.jpg" width=35%>
                    </div>
                }
            </div>
        </div>
        <div class="weui-flex">
            <div>
                <div class="placeholder"></div>
            </div>
            <div class="weui-flex__item"></div>
            <div>
                <div class="placeholder"></div>
            </div>
        </div>
        <div class="weui-cells weui-cells_form">

            <div class="weui-cell ">
                <div class="weui-cell__hd">
                    <label class="weui-label">手机号</label>
                </div>
                <div class="weui-cell__bd">
                    @Html.TextBoxFor(o => o.StuCellphone, new { @class = "weui-input",id= "StuCellphone", placeholder = "请输入手机号" })
                </div>

            </div>
            <div class="weui-cell">
                <div class="weui-cell__hd"><label class="weui-label">邮箱</label>
                </div>
                <div class="weui-cell__bd">
                    @Html.TextBoxFor(o => o.StuEMail, new { @class = "weui-input",id= "StuEMail", placeholder = "请输入邮箱" })
                </div>
            </div>
            <div class="weui-cell">
                <div class="weui-cell__hd"><label class="weui-label">qq</label>
                </div>
                <div class="weui-cell__bd">
                    @Html.TextBoxFor(o => o.StuQQ, new { @class = "weui-input", placeholder = "请输入QQ" })
                </div>
            </div>
            <div class="weui-cell weui-cell_select weui-cell_select-after">
                <div class="weui-cell__hd">
                    <label for="" class="weui-label">性别</label>
                </div>
                <div class="weui-cell__bd">
                    @Html.DropDownListFor(o => o.StuSex, Model.selectItems, new { @class = "weui-select" })
                </div>
            </div>

            <div class="weui-cell">
                <div class="weui-cell__hd"><label for="" class="weui-label">出生日期</label>
                </div>
                <div class="weui-cell__bd">
                    <input name="StuBirthday" id="StuBirthday" class="weui-input" type="date" value="@Model.StuBirthday"/>
                </div>
            </div>

            <div class="weui-cell">
                <div class="weui-form-preview__item" style="width:100%">
                    <label class="weui-form-preview__label" style="color:#000000">个人简介</label>
                    <span class="weui-form-preview__value">
                        @Html.TextAreaFor(o => o.StuResume, new { @class = "weui-textarea", rows = "5" })                    
                    </span>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    $("#StuCellphone").blur(function () {
        if (!$("#StuCellphone").val() || !(/^1[3|4|5|8][0-9]\d{8}$/.test($("#StuCellphone").val()))) {
            $.toptip("请输入正确的手机号码");
            return;
        }
    });

    $("#StuEMail").blur(function () {
        if (!$("#StuEMail").val() || !(/^\w+([-+.]\w+)*@@\w+([-.]\w+)*\.\w+([-.]\w+)*$/.test($("#StuEMail").val()))) {
            $.toptip("请输入正确的邮箱");
            return;
        }
    });

</script>
