@model ServicePlatform.Areas.AppStudent.ViewModel.Home.Ent_Des_M
<style>
    .weui-form-preview__label {
        float: left;
        margin-right: 1em;
        min-width: 2em;
        color: #000000;
        text-align: justify;
        text-align-last: justify;
    }

    .weui-form-preview__value {
        display: block;
        overflow: hidden;
        word-break: normal;
        word-wrap: break-word;
        color: #999;
        padding-left: 1.2em;
</style>
@Html.Partial("student_menu")
    <div class="weui-navbar">
        <div class="colortitle weui-navbar__item">
            <div class="weui-flex ">
                <div>
                    @*跳转到企业详情*@
                    <a href="javascript:submit('a');"> <div class="placeholder"><img src="@ViewData["root"]images/return.png" class="return"></div></a> 
                </div>
                <div class="weui-flex__item "><div class="placeholder">@Model.Ent_Name</div></div>
                <div style="width:48px"><div class="placeholder"></div></div>
            </div>
        </div>
    </div>
    <div class="weui-tab__bd">
        <div class="weui-tab__bd-item weui-tab__bd-item--active">
            @if (!string.IsNullOrEmpty(Model.Photos))
            {
                var photo = Model.Photos.Split(';');
                var firstphoto = photo[photo.Length - 1];
                <img style="width:100%;height:200px " src="@firstphoto" onload="if(this.height>300)this.height='300';">
            }
            else
            {
                <img style="width:100% " src="@ViewData["root"]images/nopic_385x240.png">
            }

            <div class="weui-cells">
                <div class="weui-cell">
                    <div class="weui-form-preview__item">
                        <label class="weui-form-preview__label">地址:</label>
                        <span class="weui-form-preview__value">@Model.EntAddress</span>
                    </div>
                </div>
                <div class="weui-cell">
                    <div class="weui-form-preview__item">
                        <label class="weui-form-preview__label">电话:</label>
                        <span class="weui-form-preview__value">@Model.phone</span>
                    </div>
                </div>
                <div class="weui-cell">
                    <div class="weui-form-preview__item">
                        <label class="weui-form-preview__label">邮箱:</label>
                        <span class="weui-form-preview__value">@Model.Email</span>
                    </div>
                </div>
                <div class="weui-cell">
                    <div class="weui-form-preview__item">
                        <label class="weui-form-preview__label">简介:</label>
                        <span class="weui-form-preview__value">@(new HtmlString(Model.EntResume))</span>
                    </div>
                </div>
            </div>
        </div>
    </div>




