@model ServicePlatform.Areas.AppStudent.ViewModel.Home.Ent_Detail_M
@Html.Partial("student_menu")
    <div class="weui-navbar">
        <div class="colortitle weui-navbar__item">
            <div class="weui-flex ">
                @*跳转到所有企业列表（AllEnt_List）*@
                <a href="javascript:submit('j');">
                    <div><div class="placeholder"><img src="@ViewData["root"]images/return.png" class="return"></div></div>
                </a>

                <div class="weui-flex__item"><div class="placeholder">@Model.Ent_Name</div></div>
                <div style="width:48px"><div class="placeholder"></div></div>
            </div>
        </div>
    </div>
    <div class="weui-tab__bd">
        <div class="weui-tab__bd-item weui-tab__bd-item--active">
            @if (string.IsNullOrEmpty(Model.Photos))
            {
                <img style="width: 100%" src="@ViewData["root"]images/nopic_385x240.png" />
            }
            else
            {
                var photo = Model.Photos.Split(';');
                var firstphoto = photo[photo.Length - 1];
                <img style="width: 100%;height:200px" src="@firstphoto">
            }
            <div class=" weui-cell">企业详情栏目</div>

            <div class="weui-grids">

                @*跳转到所有企业介绍（Ent_Des）*@
                <a href="javascript:submit('a');" class="weui-grid">
                    <div class="weui-grid__icon">
                        <img src="@ViewData["root"]images/icon_nav_article.png" alt="">
                    </div>
                    <p class="weui-grid__label">企业介绍</p>
                </a>

                @*跳转到所有企业岗位（Ent_Post）*@
                <a href="javascript:submit('b');" class="weui-grid">
                    <div class="weui-grid__icon">
                        <img src="@ViewData["root"]images/icon_nav_search_bar.png" alt="">
                    </div>
                    <p class="weui-grid__label">岗位查看</p>
                </a>

                @*跳转到所有企业培养计划（Ent_TrainingPlan）*@
                <a href='javascript:submit("c",{Ent_No:"@Model.Ent_No",DLFileColumnID:"7826"});' class="weui-grid">
                    <div class="weui-grid__icon">
                        <img src="@ViewData["root"]images/icon_nav_cell.png" alt="">
                    </div>
                    <p class="weui-grid__label">培养计划</p>
                </a>

                @*跳转到所有企业成功案列（Ent_SucceedCase）*@
                <a href='javascript:submit("d",{Ent_No:"@Model.Ent_No",DLFileColumnID:"6000"});' class="weui-grid">
                    <div class="weui-grid__icon">
                        <img src="@ViewData["root"]images/icon_nav_panel.png" alt="">
                    </div>
                    <p class="weui-grid__label">成功案列</p>
                </a>

                @*跳转到所有企业薪资待遇（Ent_Salary）*@
                <a href='javascript:submit("e",{Ent_No:"@Model.Ent_No",DLFileColumnID:"9000"});' class="weui-grid">
                    <div class="weui-grid__icon">
                        <img src="@ViewData["root"]images/icon_nav_tab.png" alt="">
                    </div>
                    <p class="weui-grid__label">薪资待遇</p>
                </a>

                @*跳转到所有企业员工食宿（Ent_StaffAcc）*@
                <a href='javascript:submit("f",{Ent_No:"@Model.Ent_No",DLFileColumnID:"4000"});' class="weui-grid">
                    <div class="weui-grid__icon">
                        <img src="@ViewData["root"]images/icon_nav_actionSheet.png" alt="">
                    </div>
                    <p class="weui-grid__label">员工食宿</p>
                </a>

                @*跳转到所有企业员工天地（Ent_Staff）*@
                <a href='javascript:submit("g",{Ent_No:"@Model.Ent_No",DLFileColumnID:"5000"});' class="weui-grid">
                    <div class="weui-grid__icon">
                        <img src="@ViewData["root"]images/icon_nav_toast.png" alt="">
                    </div>
                    <p class="weui-grid__label">员工天地</p>
                </a>

                @*跳转到所有企业资源下载（Ent_Download）*@
                <a href='javascript:submit("h",{Ent_No:"@Model.Ent_No",DLFileColumnID:"7878"});' class="weui-grid">
                    <div class="weui-grid__icon">
                        <img src="@ViewData["root"]images/icon_nav_icons.png" alt="">
                    </div>
                    <p class="weui-grid__label">资源下载</p>
                </a>

                @*跳转到所有企业疑问解答（Ent_FAQ）*@
                @*<a href='javascript:submit("a",{Ent_No:"@Model.Ent_No",DLFileColumnID:"7826"});' class="weui-grid">*@
                <a href='javascript:submit("i",{Ent_No:"@Model.Ent_No",DLFileColumnID:"1234"});' class="weui-grid">
                    <div class="weui-grid__icon">
                        <img src="@ViewData["root"]images/icon_intro.png" alt="">
                    </div>
                    <p class="weui-grid__label">常见问题</p>
                </a>


</div>
        </div>
    </div>




