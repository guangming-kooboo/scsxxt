@model ServicePlatform.Areas.AppStudent.ViewModel.Visitor.ForgetPsw_M


    <script type="text/javascript">
        function Msg(o) {
            //if (!$("#requestId").val()) {
            //    time(this);
            //}
            var userName = $("#username").val();
            var phone = $("#phone").val();
            if (!phone || !(/^1[3|4|5|8][0-9]\d{8}$/.test(phone))) {
                $.toptip("请输入正确的手机号码");
                return;
            }
            if (!userName) {
                $.toptip("请输入真实姓名");
                return;
            }
            $.ajax({
                type: "post",
                url: "http://wx.52xyj.cn/Msg/Open/SendSms?Name=" + userName + "&mobile=" + phone,
                dataType: "json",
                success: function(data) {
                    if (data == 500) {
                        return alert("发送失败");
                    } else {
                        $("#requestId").val(data.data.RequestId);
                        $("#TrueCode").val(data.data.Code);
                    }
                    if ($("#requestId").val()) {
                         time(o);
                   }
                }
            });
        };

        function ok() {
            var codeValue= $("#Code").val();
            var requestId = $("#requestId").val();
            $.ajax({
                type: "post",
                url: "http://wx.52xyj.cn/Msg/Open/CheckSms?Code=" + codeValue + "&requestId=" + requestId,
                dataType: "json",
                success: function(data) {
                    if (data == 500) {
                        return alert("发送失败");
                    } else {
                        if ($("#TrueCode").val() == codeValue && $("#TrueCode").val()!="")
                            window.location.href = "/AppStudent/Visitor/RevisePassword";
                        else
                            $.toptip("验证码错误");
                    }
                }
            });
        };
</script>
