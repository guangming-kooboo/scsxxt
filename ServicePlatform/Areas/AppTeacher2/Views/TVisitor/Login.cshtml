@model ServicePlatform.Areas.AppTeacher2.ViewModel.TVisitor.Login_M
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <title></title>

    <link href="~/Areas/AppTeacher2/Content/css/pubilice.css" rel="stylesheet" />
    <link href="~/Areas/AppTeacher2/Content/css/jquery-weui.css" rel="stylesheet" />
    <link href="~/Areas/AppTeacher2/Content/css/weui.min.css" rel="stylesheet" />


    <script src="~/Areas/AppTeacher2/Content/js/jquery-2.1.4.js"></script>
    <script src="~/Areas/AppTeacher2/Content/js/fastclick.js"></script>
    <script src="~/Areas/AppTeacher2/Content/js/jquery-weui.js"></script>
    <script>
  $(function() {
    FastClick.attach(document.body);
  });
    </script>

    <style>
        .placeholder {
            margin: 5px;
            padding: 0 10px;
            text-align: center;
        }
    </style>
</head>
<body ontouchstart="">
    <div class="weui-flex">
        <div class="weui-flex__item"><div class="placeholder"><br></div></div>
    </div>
    <div class="weui-flex">
        <div class="weui-flex__item"><div class="placeholder"></div></div>
        <div class="weui-flex__item">
            <div class="placeholder">
                <img src="~/Areas/AppTeacher2/Content/images/u8.png">
            </div>
        </div>
        <div class="weui-flex__item"><div class="placeholder"></div></div>
    </div>
    
    <div class="weui-flex">
        <div class="weui-flex__item"><div class="placeholder">实学</div></div>
    </div>
    <form method="post">
        <div class="weui-cells weui-cells_form">


            <div class="weui-cell weui-cell_select weui-cell_select-after">
                <div class="weui-cell__hd">
                    <label for="" class="weui-label">学校</label>
                </div>
                <div class="weui-cell__bd">
                    @Html.DropDownListFor(o => o.UnitID, Model._UnitItems, new { @class = "weui-select" })

                </div>
            </div>

            <div class="weui-cell">
                <div class="weui-cell__hd"><label class="weui-label">账号</label>
                </div>
                <div class="weui-cell__bd">
                    @Html.TextBoxFor(o => o.UserID, new {@class = "weui-input", placeholder = "请输入帐号"})
                    @*<input class="weui-input" type="number" pattern="[0-9]*" placeholder="请输入帐号">*@
                </div>
            </div>

            <div class="weui-cell">
                <div class="weui-cell__hd"><label class="weui-label">密码</label>
                </div>
                <div class="weui-cell__bd">
                    @Html.TextBoxFor(o => o.UserPwd, new {@class = "weui-input", placeholder = "请输入密码"})
                    @*@Html.PasswordFor(o => o.UserPwd, new {@class = "weui-input", placeholder = "请输入密码"})*@

                </div>
            </div>
        </div>

        <div class="pubilice-uppad"></div>
        <input class="weui-btn weui-btn_primary" type="submit" value="登录" />

    </form>
    <div class="weui-flex">
        <div>
            <div class="placeholder" ><a href="@Url.Action("ForgetPsw","TVisitor",new {area="AppTeacher2"})">忘记密码？</a></div>
        </div>
        <div class="weui-flex__item">
            <div class="placeholder"> </div>
        </div>
        <div>
            <div class="placeholder"></div>
        </div>
    </div>
</body>
</html>
