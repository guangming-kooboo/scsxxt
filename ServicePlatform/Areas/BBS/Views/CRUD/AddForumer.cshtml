@model ServicePlatform.Areas.BBS.ViewModels.CRUD.AddForumer_M
@{
    Layout = ViewData["Layout"].ToString();
}
<div class="col-md-6">
    <!-- BEGIN SAMPLE FORM PORTLET-->
    <div class="portlet ">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-reorder"></i>@ViewBag.Title
            </div>
        </div>
        <div class="portlet-body form">
            <form class="form-horizontal" method="POST" role="form">
                <div class="form-body"> 
                    @Html.HiddenFor(o => o.forumid)                   
                    <div class="form-group">
                        @Html.LabelFor(o => o.forumname, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(o => o.forumname, new { @class = "form-control",@readonly="readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(o => o.userid, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(o => o.userid, new { @class = "form-control" })<a href="/BBS/ManagerCenter/SearchAllUsers?ReportID=BBS_用户列表&Params=;" target="_blank">查看所有用户</a>
                            <span class="help-block">
                          
                            </span>
                        </div>
                    </div>


                
                  
                   
                </div>
                <div class="form-actions fluid">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn btn-success">保存</button>
                        <button type="button" class="btn btn-default back">返回</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>