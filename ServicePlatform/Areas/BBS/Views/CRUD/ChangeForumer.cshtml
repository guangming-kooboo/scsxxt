@model Qx.Community.Entity.BBS_ForumManager
@{
    Layout = ViewData["Layout"].ToString();
}

<div class="col-md-6">
    <!-- BEGIN SAMPLE FORM PORTLET-->
    <div class="portlet ">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-reorder"></i>@ViewBag.Title
            </div>
        </div>
        <div class="portlet-body form">
            <form class="form-horizontal" method="POST" role="form">
                <div class="form-body">
                        <input type="hidden" name="ForumManagerID" value="@Model.ForumManagerID" />


                    <div class="form-group">
                        <label class="col-md-3 control-label">版块名字</label>
                        <div class="col-md-9">
                                <input type="text" name="ForumID" class="form-control" value="@Model.ForumID" />
                            <span class="help-block">
                        
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">版主姓名</label>
                        <div class="col-md-9">
                            <input type="text" name="UserID" value="@Model.UserID" />
                            <span class="help-block">
                             
                            </span>
                        </div>
                    </div>


              
                  
                   
                </div>
                <div class="form-actions fluid">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn btn-success">保存</button>
                        <button type="button" class="btn btn-default back">返回</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>