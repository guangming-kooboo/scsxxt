@model Qx.CPQ.Entity.CPQ_T_Question
@{
    Layout = ViewData["Layout"].ToString();
}

<div class="col-md-6">
    <!-- BEGIN SAMPLE FORM PORTLET-->
    <div class="portlet ">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-reorder"></i>@ViewBag.Title
            </div>
        </div>
        <div class="portlet-body form">
            <form class="form-horizontal" method="POST" role="form">
                <div class="form-body">
                    <input type="hidden" name="ForumID" value="1" /><!--这里有疑问暂时搁浅-->>


                    <div class="form-group">
                        <label class="col-md-3 control-label">子版块名字</label>
                        <div class="col-md-9">
                            <input type="text" name="ColumnName" class="form-control" value="" />
                            <span class="help-block">
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">子版块介绍</label>
                        <div class="col-md-9">
                            <textarea class="form-control" name="ColumnExplain" rows="3"></textarea>
                        </div>
                    </div>





                </div>
                <div class="form-actions fluid">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn btn-success">保存</button>
                        <button type="button" class="btn btn-default">返回</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>