@{
    ViewBag.Title = "AddContentColumn";
}

<!DOCTYPE html>



<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>添加内容栏目</title>

   <script src="~/Areas/CodeManager/Content/Easyui/jquery.min.js"></script>
    
    <link href="/Areas/CodeManager/Content/All/css/style.css" rel="stylesheet" type="text/css" />
    
    


</head>
<body>
    <div class="place">
            <span>位置：</span>
            <ul class="placeul">
                <li><a href="#">内容栏目管理</a></li>
                <li><a href="#">添加内容栏目</a></li>
            </ul>
        </div>

    <div class="formbody">

            <div class="formtitle"><span>添加内容栏目</span></div>
            

        <form method="post" action="/Code/ReAddContentColumn" name="myform" id="myform">

            <ul class="forminfo">




                <li>
                    <label>内容栏目编号(4个数字):</label>
                    <input type="text" name="ContColumnID" id="ContColumnID" class="dfinput" placeholder="例如：1101（4个数字)">
                </li>

                <li>
                    <label>内容栏目名称:</label>
                    <input type="text" name="ContColumnName" id="ContColumnName" class="dfinput" placeholder="例如：学院公告">
                </li>


                <li>

                    <label>所属内容类型选择：</label>
                    <select style="width:100px" name="ContTypeName" id="ContTypeName" class="dfinput">
                       
                        @foreach (var item in ViewBag.temp)
                        {
                            <option value="@item.ConTypeName">@item.ConTypeName</option>

                        }
                    </select>
                  
                   
                </li>
                <li>
                    <label>所属子系统:</label>
                    
                    <select style="width:100px" name="SybSystem" id="SybSystem" class="dfinput">
                        @foreach (var item in ViewBag.system) { 
                        <option value="@item">@item</option>
                        
                        }
                    </select>
                </li>



                <li>
                    <label>&nbsp;</label><input type="submit" value="保  存" class="btn" />

                </li>
            </ul>

        </form>
   
    </div>
     











</body>
</html>
