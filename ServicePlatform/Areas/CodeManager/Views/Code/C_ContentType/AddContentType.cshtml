@{
    ViewBag.Title = "AddContentType";
}

<!DOCTYPE html>



<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>添加内容类型</title>

   <script src="~/Areas/CodeManager/Content/Easyui/jquery.min.js"></script>
    
    <link href="/Areas/CodeManager/Content/All/css/style.css" rel="stylesheet" type="text/css" />
    
    


</head>
<body>
    <div class="place">
            <span>位置：</span>
            <ul class="placeul">
                <li><a href="#">内容类型代码管理</a></li>
                <li><a href="#">添加内容类型</a></li>
            </ul>
        </div>

    <div class="formbody">

            <div class="formtitle"><span>添加内容类型</span></div>
            

        <form method="post" action="/Code/ReAddContentType" name="myform" id="myform">

            <ul class="forminfo">




                <li>
                    <label>内容类型编号:</label>
                    <input type="text" name="ConTypeID" id="ConTypeID" class="dfinput" placeholder="例如：01（2位数字）">
                </li>


                <li>
                    <label>内容类型名称:</label>
                    <input type="text" id="ConTypeName" name="ConTypeName" class="dfinput" placeholder="例如：下载文件/印章">
                </li>



                <li>
                    <label>&nbsp;</label><input type="submit" value="保  存" class="btn" />

                </li>
            </ul>

        </form>
   
    </div>
     











</body>
</html>
