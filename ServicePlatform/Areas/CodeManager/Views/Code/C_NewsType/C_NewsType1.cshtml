@{
    ViewBag.Title = "C_NewsType1";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>新闻类型维护</title>
    <link href="/Areas/CodeManager/Content/All/css/style.css" rel="stylesheet" type="text/css" />
    <script src="~/Areas/CodeManager/Content/Easyui/jquery.min.js"></script>
    <script src="~/Areas/CodeManager/Content/Easyui/jquery.easyui.min.js"></script>
    <script src="~/Areas/CodeManager/Content/Easyui/easyui-lang-zh_CN.js"></script>
    <link href="~/Areas/CodeManager/Content/Easyui/themes/default/easyui.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/CodeManager/Content/Easyui/themes/icon.css" rel="stylesheet" type="text/css" />


    <script src="~/Areas/CodeManager/Content/C_NewsType/js/NewsType.js"></script>
    
    <script language="javascript" type="text/javascript">
        function detail() {
            var SelectRow = $('#NewsTypetablebox').datagrid("getSelected");
            var SelectId = SelectRow.TypeID;
            var s = "/CodeManager/Code/detailNewsType?id=" + SelectId + "";
            window.location = s;
        }
        function update() {
            var SelectRow = $('#NewsTypetablebox').datagrid("getSelected");
            var SelectId = SelectRow.TypeID;

            var s = "/CodeManager/Code/updateNewsType?id=" + SelectId + "";
            window.location = s;
        }
    </script>


    <style type="text/css">
        .datagrid-cell {
            text-overflow: ellipsis;
            overflow: hidden;
            text-align: center;
        }
    </style>

</head>
<body>
    <div class="place">
            <span>位置：</span>
            <ul class="placeul">
                <li><a href="#">新闻类型维护表</a></li>
                <li><a href="#">新闻类型列表</a></li>
            </ul>
        </div>
    <!--用于显示表格-->
    <div id="NewsTypetablebox">
        <table id="NewsTypetable"></table>
        <div id="HomeToolBar">
            <div id="TButton" style="padding:5px;">
                <div>
                    <a href="/CodeManager/Code/AddNewsType" class="easyui-linkbutton" iconcls="icon-add">添加</a>
                    <a href="#" class="easyui-linkbutton" iconcls="icon-remove" onclick="obj.remove();">删除</a>
                    <a href="#" class="easyui-linkbutton" id="TB1" iconcls="icon-edit" onclick="update();">修改</a>
                    <a href="#" class="easyui-linkbutton" id="TB2" iconcls="icon-tip"  onclick="detail();">详情</a>
                   
                </div>
            </div>
            @*<div>
                    查询新闻：<input type="text" name="SearchNews" style="width=100px;" />
                    <a href="#" class="easyui-linkbutton" iconcls="icon-search" onclick="obj.search();">查询</a>
                </div>*@
            <input class="easyui-searchbox" data-options="prompt:'搜索内容',menu:'#SearchItem',searcher:doSearch" style="width:300px" name="AtributeSearch"/>
              <label>新闻类型列表</label>
                
                 
            <div id="SearchItem">
                <div data-options="name:'all',iconCls:'icon-ok'">所有种类</div>
                <div data-options="name:'TypeID'">新闻类型编号</div>
                
                <div data-options="name:'TypeName'">新闻类型名称</div>

                <script>
                    function doSearch(value, name) {
                        //alert('You input: ' + value + '(' + name + ')');
                        $('#NewsTypetablebox').datagrid('load', {
                            classAttribute: name,
                            classValue: value,
                        });
                    }
                </script>
            </div>
        </div>
    </div>
</body>
</html>


