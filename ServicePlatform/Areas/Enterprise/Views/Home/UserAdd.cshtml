@{
    ViewBag.Title = "UserAdd";
}


<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>添加记录</title>
    <link href="/Areas/Permission/Content/css/style.css" rel="stylesheet" />
</head>

<body>

    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            <li><a href="#">首页</a></li>
            <li><a href="#">添加员工</a></li>
        </ul>
    </div>


    <form action="@ViewBag.actionLink" method="post">

        <input name="objName" value="ServicePlatform.Areas.Permission.Models.User" type="text" hidden="hidden" class="dfinput" />
        <input name="objName" value="ServicePlatform.Areas.Permission.Models.User" type="text" hidden="hidden" class="dfinput" />
        <input name="Ent_No" value="ServicePlatform.Areas.Permission.Models.User" type="text" hidden="hidden" class="dfinput" />


        <div class="formbody">

            <div class="formtitle"><span>添加员工</span></div>

            <ul class="forminfo">
                
                <li>
                    <label>员工号</label>
                    <input name="EmployeeID" type="text" class="dfinput" />
                    <i>*请输入员工号</i>
                </li>

                <li>
                    <label>员工姓名</label>
                    <input name="EmployeeName" type="text" class="dfinput" />
                    <i>*请输入员工姓名</i>
                </li>
                <li>
                    <label>用户密码</label>
                    <input name="UserPWD" type="password" class="dfinput" />
                    <i>*请输入用户密码</i>
                </li>

                <li>
                    <label>用户类型</label>
                    <select name="UserType" style="width: 120px;" class="dfinput">
                        <option value="31">人力资源</option>
                        <option value="32">企业导师</option>
                        <option value="33">企业普通员工</option>
                    </select>
                    <i>*选择用户类型</i>
                </li>
              
               

                <li><label>&nbsp;</label><input name="" type="submit" class="btn" value="保存" /></li>

            </ul>


        </div>
    </form>


   

</body>

</html>





