@using ServicePlatform.Areas.Permission.Models
@{
    
    T_Module m = ViewBag.data == null ? new T_Module() : ViewBag.data;
   
}


<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>添加记录</title>
    <link href="/Areas/Permission/Content/css/style.css" rel="stylesheet" />
</head>

<body>

    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            <li><a href="#">首页</a></li>
            <li><a href="#">编辑菜单</a></li>
        </ul>
    </div>


    <form action="@ViewBag.actionLink" method="post">

        <input name="objName" value="ServicePlatform.Areas.Permission.Models.T_Module" type="text" hidden="hidden" class="dfinput" />
        <input name="ModuleID" value="@m.ModuleID" type="text" hidden="hidden" class="dfinput" />
        <input name="FartherModuleID" value="@m.FartherModuleID" type="text" hidden="hidden" class="dfinput" />
        <div class="formbody">

            <div class="formtitle"><span>添加记录</span></div>

            <ul class="forminfo"> 
                <li><label>菜单名称</label><input name="ModuleName" value="@m.ModuleName" type="text" class="dfinput" /><i>*请输入菜单名称</i></li>
                <li><label>页面名称</label><input name="PageName" value="@m.PageName" type="text" class="dfinput" /><i>*请输入页面名称 </i></li>
                <li><label>菜单层级</label><input name="ModuleLevel" value="@m.ModuleLevel" type="text" class="dfinput" /><i>*请输菜单层级</i></li>
                <li><label>菜单排序</label><input name="ModuleOrder" value="@m.ModuleOrder" type="text" class="dfinput" /><i>*请输菜单排序</i></li>
                <li><label>是否可用</label>
                    <select name="AvailableStatus"class="dfinput">
                        <option selected="selected" value="1">可用</option>
                        <option value="-1">不可用</option>
                    </select>
                <i>*请选择是否可用</i></li>

                <li><label>&nbsp;</label><input name="" type="submit" class="btn" value="保存" /></li>

            </ul>


        </div>
    </form>


   

</body>

</html>





