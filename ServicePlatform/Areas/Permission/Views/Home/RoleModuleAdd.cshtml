
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>添加记录</title>
    <link href="/Areas/Permission/Content/css/style.css" rel="stylesheet" />
</head>

<body>

    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            <li><a href="#">首页</a></li>
            <li><a href="#">添加记录</a></li>
        </ul>
    </div>


    <form action="@ViewBag.actionLink" method="post">

        <input name="objName" value="ServicePlatform.Areas.Permission.Models.T_RoleModule" type="text" hidden="hidden" class="dfinput" />
        <input name="RoleID" type="text" value="@ViewBag.RoleID" readonly="readonly" hidden="hidden" class="dfinput" />

        <div class="formbody">

            <div class="formtitle"><span>给[ @(new ServicePlatform.Areas.Permission.Models.PermissionContext().Role.Find(ViewBag.RoleID).RoleName) ]分配权限</span></div>

            <ul class="forminfo">
                @*<li>
                    <label>角色编号</label>
                    <input name="RoleID" type="text" value="@ViewBag.RoleID" readonly="readonly" class="dfinput" />
                    <i><a href="/Permission/Home/RoleShow" target="_blank">*查询角色编号</a></i>
                </li>*@
                <li>
                    <label>菜单</label>
                    @*<input name="ModuleID" type="text" class="dfinput" />*@
                    @Html.DropDownList("ModuleID", new ServicePlatform.Areas.Permission.Controllers.HomeController().GetMenu(), new { @class = "dfinput" })
                    <i><a href="/Permission/Home/MenuShow" target="_blank">*查询菜单</a></i>
                </li>
                <li>
                    <label>是否包含子菜单</label>
                    <select name="IncludeAllSubMod" class="dfinput">
                        <option value="0">否</option>
                        <option value="1">是</option>
                    </select>
                    <i>*请选择是否包含子菜单</i>
                </li>
                <li>
                    <label>数据备注</label>
                    <input name="DataDomain" type="text" class="dfinput" />
                    <i>*请输入数据备注</i>
                </li>
                <li><label>&nbsp;</label><input name="" type="submit" class="btn" value="保存" /></li>

            </ul>


        </div>
    </form>



</body>

</html>




