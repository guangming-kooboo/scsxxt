
@using ServicePlatform.Lib;
   @{
       ViewBag.Title = "添加单位及其管理员";
   }
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>添加记录</title>
    <link href="/Areas/Permission/Content/css/style.css" rel="stylesheet" />
</head>

<body>

    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            <li><a href="#">首页</a></li>
            <li><a href="#">@ViewBag.Title</a></li>
        </ul>
    </div>


    <form action="@ViewBag.actionLink" method="post">

        <input name="objName" value="ServicePlatform.Areas.Permission.Models.User" type="text" hidden="hidden" class="dfinput" />


        <div class="formbody">

            <div class="formtitle"><span>@ViewBag.Title</span></div>

            <ul class="forminfo">
                <li>
                    <label>单位编号</label>
                    <input name="UnitCode" type="text" placeholder="请输入单位编号" value="XXXXX" class="dfinput" />
                    <i>*学校用户填写学校代码,企业用户填写企业代码</i>
                </li>

                <li>
                    <label>单位名称</label>
                    <input name="UnitName" placeholder="请填写单位名称" type="text" class="dfinput" />
                    <i>*学校\企业名称</i>
                </li>
                <li>
                    <label>单位类型</label>
                    <select name="UnitType" style="width: 80px;" class="dfinput">
                        <option value=@UserTypeConst.EnterpriseUser>企业</option>
                        <option value=@UserTypeConst.SchoolUser>高校</option>
                    </select>
                     <i>*选择用户类型</i>
                </li>
                <br>
                <li>
                    <label>单位管理员工号</label>
                    <input name="UserCode" placeholder="请输入单位管理员工号" type="text" class="dfinput" />
                    <i>*该员工号账户将负责管理企业</i>
                </li>
                <li>
                    <label>单位管理员姓名</label>
                    <input name="NickName" placeholder="请输入单位管理员姓名" type="text" class="dfinput" />
                    <i>*必填项</i>
                </li>
               


                <li>
                    <label>单位管理员密码</label>
                    <input name="UserPwd" type="password" placeholder="请输入单位管理员密码" class="dfinput" />
                    <i>*必填项</i>
                </li>
                <li>
                    <label>确认密码</label>
                    <input name="UserPwd2" placeholder="请再次输入单位管理员密码"  type="password" class="dfinput" />
                    <i>*必须和单位管理员密码一致</i>
                </li>                
                
                <li><label>&nbsp;</label><input name="" type="submit" class="btn" value="保存" /></li>

            </ul>


        </div>
    </form>


    <!-- Visual Studio Browser Link -->
    <script type="application/json" id="__browserLink_initializationData">
