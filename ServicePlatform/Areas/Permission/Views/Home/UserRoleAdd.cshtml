@using Core.Services.Entity
@{
    ViewBag.Title = "为用户指派角色";
 
    string tip = ViewBag.tip;
 
}


<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>为用户指派角色</title>
    <link href="/Areas/Permission/Content/css/style.css" rel="stylesheet" />
</head>

<body>

    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            <li><a href="#">首页</a></li>
            <li><a href="#">为用户指派角色</a></li>
        </ul>
    </div>


    <form action="@ViewBag.actionLink" method="post">

        <input name="objName" value="ServicePlatform.Areas.Permission.Models.T_UserRole" type="text" hidden="hidden" class="dfinput" />


        <div class="formbody">

            <div class="formtitle"><span>添加记录</span></div>

            <ul class="forminfo">
                <li>
                    <label>用户编号</label>
                    <input name="UserID" type="text" class="dfinput" value="@ViewBag.UserID" readonly="readonly"/>                    
                    @*<i><a href="/Permission/Home/UserShow" target="_blank">*查询用户编号</a></i>*@
                </li>
                <li>
                    <label>用户名称</label>                    
                    <input name="UserName" type="text" class="dfinput" value=@ViewBag.UserName readonly="readonly"/>                    
                </li>
                <li>
                    <label>选择角色</label>
                    @*<input name="RoleID" type="text" class="dfinput" />*@

                    <select name="RoleID" style="width: 180px;" class="dfinput">
                        @for (int iLoop = 0; iLoop < ViewBag.RoleData.Count; iLoop++)
                        {
                            if (iLoop == 0)
                            {
                                <option value=@ViewBag.RoleData[iLoop].RoleID selected="selected">@ViewBag.RoleData[iLoop].RoleName</option>
                            }
                            else
                            {
                                <option value=@ViewBag.RoleData[iLoop].RoleID>@ViewBag.RoleData[iLoop].RoleName</option>
                            }
                        }
                    </select>

                    @*<i><a href="#" target="_blank">该角色的权限信息如下： @tip</a></i>*@
                </li>

                <li><label>&nbsp;</label><input name="" type="submit" class="btn" value="保存"/></li>
                <br/>
                <li style="width: 450px">
                    <i>
                        <ul>角色权限说明： </ul><br />
                        @(new HtmlString(tip))
                    </i>
                </li>
            </ul>


        </div>
    </form>




</body>

</html>











