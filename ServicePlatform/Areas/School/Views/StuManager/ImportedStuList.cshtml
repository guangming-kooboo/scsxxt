<html>
<head>
    <title>学生列表</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<body>
    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            <li><a href="#">学生管理中心</a></li>
            <li><a href="#">学生列表</a></li>
        </ul>
    </div>

    <div class="rightinfo">

@using (Html.BeginForm("ExportExcel", "StuManager", FormMethod.Post))
