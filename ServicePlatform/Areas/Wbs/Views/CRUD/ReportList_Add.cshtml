@model ServicePlatform.Areas.Wbs.ViewModels.CRUD.ReportList_Add
@{
    Layout = ViewData["Layout"].ToString();
}

<div class="col-md-6">
    <!-- BEGIN SAMPLE FORM PORTLET-->
    <div class="portlet ">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-reorder"></i>@ViewBag.Title
            </div>
        </div>
        <div class="portlet-body form">
            <form class="form-horizontal" method="POST" role="form">
                <div class="form-body">
                    @Html.HiddenFor(o=>o.usernodes.SerialID)
                    <div class="form-group">
                        <label class="col-md-3 control-label">账号</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(o => o.usernodes.UserID,new { @class = "form-control" }) 
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">预分配工作量总占比</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(o => o.userweight,new { @class = "form-control" }) 
                            
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">实际工作量总占比</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(o => o.realweight,new { @class = "form-control" }) 
                          
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">姓名</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(o => o.username,new { @class = "form-control" }) 
                        </div>
                    </div>

                </div>
                <div class="form-actions fluid">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn btn-success">保存</button>
                        <button type="button" class="btn btn-default back">返回</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

