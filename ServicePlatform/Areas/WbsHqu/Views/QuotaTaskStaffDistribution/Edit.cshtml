@using Qx.Tools.Web.Mvc.Html
@using Qx.Contents.Services
@model ServicePlatform.Areas.WbsHqu.ViewModels.QuotaTaskStaffDistribution_M
@{
    Layout = ViewData["Layout"].ToString();
}
@Html.HiddenFor(o => o.QuotaTaskID)

@Html.HiddenFor(o => o.QuotaTaskStaffDistributionID)

@Html.InputFor(o => o.StaffID)

@Html.InputFor(o => o.StaffName)

@Html.InputFor(o => o.RelativeWeight, "请输入百分数，如“50”即为50%")

@Html.HiddenFor(o => o.AbsoluteWeight)

@Html.InputFor(o => o.DistributionExplain)

@Html.SelectFor(o => o.IsComplete, Model.IsCompleteItem)

<div class="form-group">
    <label class="col-md-3 control-label">完成时间</label>
    <div class='col-md-9'>
        <input size="16" type="text" value=@Model.FinishTime name="FinishTime" readonly class="form_datetime form-control">
    </div>
</div>

@Html.RichBoxFor(o => o.Certificate, "测试内容系统文件上传")

@Html.InputFor(o => o.StaffSequence)

