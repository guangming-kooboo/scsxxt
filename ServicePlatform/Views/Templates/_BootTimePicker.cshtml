@{
    var value = ((ViewData["value"]!=null) ? (DateTime.Parse(ViewData["value"].ToString())):DateTime.Now);
    var name = string.IsNullOrEmpty((string)ViewData["name"]) ? "noName" : ((string)ViewData["name"]);
    var id = string.IsNullOrEmpty((string)ViewData["id"]) ? "noId" : ((string)ViewData["id"]);
    var displayName = string.IsNullOrEmpty((string)ViewData["displayName"]) ? "默认名称" : (string)ViewData["displayName"];

}
<div class="form-group">
    <label for="dtp_input1" class="col-md-2 control-label">@displayName</label>
    <div class="input-group date form_datetime col-md-5" data-date="1979-09-16T05:25:07Z" data-date-format="dd MM yyyy - HH:ii p" data-link-field="dtp_input1">
        <input class="form-control" size="16" type="text" id="@id" name="@name" value="@value.ToString("yyyy-MM-dd HH:mm")" readonly>
        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
        <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
    </div>
    <input type="hidden" id="dtp_input1" value="" /><br />
</div>


    

